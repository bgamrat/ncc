{% extends '@ezdesign/sign-pagelayout.html.twig' %}
{% block content %}
    {% if items is not empty %}
        <div id="sign-carousel" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                {% for item in items.searchHits %}
                    {% set contentInfo = item.valueObject.contentInfo %}
                    {% set contentObject = item.valueObject.content %}
                    <div class="carousel-item{% if loop.index0 == 0 %} active{% endif %}">
                        <div class="d-block w-100">
                            <h2><a href={{ path('ez_urlalias', {'contentId': contentInfo.id}) }}>{{ ez_content_name(contentInfo) }}</a></h2>
                            <p>{{ ez_render_field(contentObject, 'title') }}</p>
                            <p>{{ ez_render_field(contentObject, 'body') }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}